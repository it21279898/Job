<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".profileActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/back02"
        android:layout_marginTop="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_white"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/toolbarTitleTv"
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            />
        <ImageButton
            android:id="@+id/profileeditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:background="@drawable/shape_rect01" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileIv"
        android:layout_width="115dp"
        android:layout_height="111dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person_gray" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="366dp"
        android:layout_height="40dp"
        android:layout_below="@+id/profileIv"
        android:layout_alignStart="@+id/emailTv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="51dp"
        android:text="Full Name:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/readnameTv"
        android:layout_width="266dp"
        android:layout_height="38dp"
        android:layout_below="@+id/profileIv"
        android:layout_alignStart="@+id/emailTv"
        android:layout_marginStart="106dp"
        android:layout_marginTop="51dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_below="@+id/profileIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:text="Email :"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reademailTv"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:layout_below="@+id/profileIv"
        android:layout_alignEnd="@+id/emailTv"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usernameTv"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:layout_below="@+id/emailTv"
        android:layout_alignStart="@+id/emailTv"
        android:layout_alignEnd="@+id/emailTv"
        android:layout_marginStart="2dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="-1dp"
        android:text="UserName:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/readusernameTv"
        android:layout_width="268dp"
        android:layout_height="43dp"
        android:layout_below="@+id/emailTv"
        android:layout_alignStart="@+id/emailTv"
        android:layout_alignEnd="@+id/emailTv"
        android:layout_marginStart="110dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="-1dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/passwordTv"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:layout_below="@+id/usernameTv"
        android:layout_alignStart="@+id/usernameTv"
        android:layout_alignEnd="@+id/usernameTv"
        android:layout_marginStart="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="1dp"
        android:text="password:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/readpasswordTv"
        android:layout_width="264dp"
        android:layout_height="44dp"
        android:layout_below="@+id/usernameTv"
        android:layout_alignStart="@+id/usernameTv"
        android:layout_alignEnd="@+id/usernameTv"
        android:layout_marginStart="111dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="1dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />




</RelativeLayout>